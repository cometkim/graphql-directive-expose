    "@graphql-tools/schema": "^7.1.3",
    "@types/common-tags": "^1.8.0",
    "@types/graphql": "^14.5.0",
    "@types/tap": "^14.10.3",
    "babel-plugin-module-extension-resolver": "^1.0.0-rc.2",
    "babel-preset-minify": "^0.5.1",
    "common-tags": "^1.8.0",
